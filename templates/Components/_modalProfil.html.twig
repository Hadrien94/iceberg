{% if is_granted('ROLE_ORGANISATEUR' ) %}
    <!-- Modal Profil Organisateur -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Mon profil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <li>Nom : {{ app.user.nom }}</li>
                    <li>Email : {{ app.user.email }}</li>
                </div>

                <div class="modal-footer">
                    <a href="{{ path ('user_modifier_profil_organisateur') }}" class="btn btn-secondary btn-lg active modal-button" role="button">Modifier le profil</a>
                </div>

            </div>
        </div>
    </div>

{% elseif is_granted('ROLE_MEMBRE' ) %}
    <!-- Modal Profil Membre -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Mon profil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <li>Prenom : {{ app.user.prenom }}</li>
                    <li>Nom : {{ app.user.nom }}</li>
                    <li>Email : {{ app.user.email }}</li>
                </div>

                <div class="modal-footer">
                    <a href="{{ path ('user_modifier_profil_membre') }}" class="btn btn-secondary btn-lg active" role="button">Modifier le profil</a>
                </div>

            </div>
        </div>
    </div>

{% endif %}