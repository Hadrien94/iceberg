{% block content %}


    {# BANDEAU#}
    <div id="bigtitle" class="jumbotron">

        {# CARROUSEL #}
        <div class="container">
            <div id="carouselExampleFade" class="carousel slide " data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="size"
                             src="https://www.dax.fr/wp-content/uploads/2019/03/le-conservatoire-de-musique-et-de-danse.jpg"
                             class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img class="size"
                             src="https://www.dax.fr/wp-content/uploads/2019/03/le-conservatoire-de-musique-et-de-danse.jpg"
                             class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img class="size"
                             src="https://www.dax.fr/wp-content/uploads/2019/03/le-conservatoire-de-musique-et-de-danse.jpg"
                             class="d-block w-100" alt="...">
                    </div>
                </div>
            </div>


            {#div enfant jumbotron#}
            <div class="enfant-jumbotron">
                <div class="container">
                    <h1 class="slogan">Un projet ? </h1>
                    <hr class="traitBlanc">
                    <h2 class="accroche">Postez votre appel aux artistes</h2>
                    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                </div>
            </div>
            {#div enfant#}
        </div>
        {# fin carrousel #}


    </div>

    {% include 'Components/_modalProfil.html.twig' %}

    <div class="container effect1" id="#section02">
        {{ form_start(form, {attr:{novalidate: 'novalidate' }}) }}

        {{ form_errors(form) }}
        <!-- TITRE DE L'APPEL -->
        <div class="form-group">

            <div class="col-md-3">

                <h3 class="titre-appel"> {{ form_label(form.titre) }}</h3>
            </div>
            <div class="col-md-8">
                {{ form_widget(form.titre) }}

            </div>

        </div>

        <!-- CATEGORIE -->
        <div class="form-group">
            <div class="col-md-6">
                <h3><label>{{ form_label(form.domaine) }}</label></h3>
            </div>
            <div class="col-md-12 categorie">
                <div class="col-md-4">
                    {% for domaine in form.domaine %}
                        {% if loop.index < 4 %}
                            {{ form_widget(domaine) }}
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="col-md-4">
                    {% for domaine in form.domaine %}
                        {% if loop.index < 7 %}
                            {{ form_widget(domaine) }}
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="col-md-4">
                    {% for domaine in form.domaine %}
                        {% if loop.index < 10 %}
                            {{ form_widget(domaine) }}
                        {% endif %}
                    {% endfor %}
                </div>

            </div>
        </div>

        <!-- DATE DEBUT INSCRIPTION -->
        <div class="form-group">
            <div class="col-md-6">
                <h3>{{ form_label(form.dateDebutInscription) }}</h3>
            </div>
            <div class="col-md-4">
                {{ form_widget(form.dateDebutInscription) }}
            </div>
        </div>

        <!-- DATE FIN INSCRIPTION -->
